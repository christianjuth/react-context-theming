{
  "name": "react-context-theming",
  "version": "1.0.0-alpha.07",
  "description": "Customizable theme library written in TypeScript",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "(rm -r lib || true) && tsc --project tsconfig.build.json",
    "dev": "tsc --project tsconfig.build.json --watch",
    "docs": "yarn typedoc --out docs/ src/ --mode modules",
    "example:expo": "yarn --cwd examples/expo",
    "example:cra": "yarn --cwd examples/cra",
    "prepublish": "yarn build",
    "test": "jest",
    "typescript": "tsc --project tsconfig.build.json --noEmit"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn typescript && yarn test --watchAll=false --coverage"
    }
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/christianjuth/react-context-theming.git"
  },
  "author": "Christian Juth",
  "license": "MIT",
  "keywords": [
    "android",
    "ios",
    "react",
    "react native",
    "ui kit",
    "material design"
  ],
  "bugs": {
    "url": "https://github.com/christianjuth/react-context-theming/issues"
  },
  "peerDependencies": {
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-native": "^0.62.2",
    "@types/react-test-renderer": "^16.9.2",
    "commitlint": "^8.3.5",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "react": "^16.12.0",
    "react-test-renderer": "^16.12.0",
    "typedoc": "^0.16.10",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "react-native": "^0.61.5"
  }
}
