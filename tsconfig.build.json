{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "lib": [ "ESNext", "DOM" ],
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "react-context-theming": [
        "*",
        "src/index.tsx"
      ],
      "react-context-theming/native": [
        "*",
        "src/native.tsx"
      ],
      "react-context-theming/web": [
        "*",
        "src/web.tsx"
      ]
    },
    "skipLibCheck": true
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}